<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hackathon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundLight</item>
        <!-- Customize your theme here. -->

        <item name="android:queryBackground">@color/backgroundLight</item>

        <item name="android:textColor">@color/white</item>

        <item name="android:startColor">@color/startColorLight</item>
        <item name="android:centerColor">@color/centerColorLight</item>
        <item name="android:endColor">@color/endColorLight</item>

    </style>

</resources>